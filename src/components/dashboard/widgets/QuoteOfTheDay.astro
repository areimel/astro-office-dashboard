---
// Fetch quote data during server-side rendering
const response = await fetch('https://thequoteshub.com/api/');
const { text, author } = await response.json();
---

<div class="h-full flex flex-col justify-center">
  <blockquote class="space-y-4">
    <p class="text-2xl font-serif text-gray-800 dark:text-gray-200 leading-relaxed">
      "{text}"
    </p>
    <footer class="text-lg text-gray-600 dark:text-gray-400">
      â€” {author}
    </footer>
  </blockquote>
</div> 