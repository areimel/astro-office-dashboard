---
interface Props {
  ariaLabel: string;
  class?: string;
  floatingLabel?: string;
  [x: string]: any;
}

const { ariaLabel, class: className, floatingLabel, ...rest } = Astro.props;
---

<button
  class="relative inline-flex items-center gap-2 bg-transparent border-none p-0 cursor-pointer group"
  aria-label={ariaLabel}
  {...rest}
>
  <div
    class:list={[
      "relative p-2 rounded-full bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200 group-hover:bg-gray-400 dark:group-hover:bg-gray-600 border-2 border-gray-800 dark:border-gray-300 transition-colors duration-200",
      className
    ]}
  >
    <slot />
  </div>
  {floatingLabel && (
    <span class="text-gray-700 dark:text-gray-200 font-medium text-xs px-4 py-2 bg-gray-200 dark:bg-gray-800 border-2 border-gray-800 dark:border-gray-300 rounded-lg shadow-sm dark:shadow-gray-900 whitespace-nowrap group-hover:bg-gray-400 dark:group-hover:bg-gray-600 transition-colors duration-200">
      {floatingLabel}
    </span>
  )}
</button>
