---
interface Props {
  title: string;
  items: Array<{
    time?: string;
    description?: string;
    symbol?: string;
    price?: string;
    change?: string;
    headline?: string;
  }>;
}

const { title, items } = Astro.props;
---

<div class="flex flex-col p-4">
  <h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-white">
    {title}
  </h2>
  <div class="flex-1 flex flex-col gap-4">
    {items.map((item) => (
      <div class="bg-gray-200 dark:bg-gray-700 rounded-lg p-4 shadow-sm">
        {/* Meeting item */}
        {item.time && (
          <div class="flex justify-between items-center">
            <span class="text-blue-600 dark:text-blue-400 font-medium">{item.time}</span>
            <span class="text-gray-700 dark:text-gray-300">{item.description}</span>
          </div>
        )}
        
        {/* Stock ticker item */}
        {item.symbol && (
          <div class="flex justify-between items-center">
            <span class="font-bold text-gray-800 dark:text-gray-200">{item.symbol}</span>
            <div class="flex gap-4">
              <span class="text-gray-700 dark:text-gray-300">{item.price}</span>
              <span class={item.change?.startsWith('+') ? 'text-green-600' : 'text-red-600'}>
                {item.change}
              </span>
            </div>
          </div>
        )}
        
        {/* News item */}
        {item.headline && (
          <div class="text-gray-700 dark:text-gray-300">
            {item.headline}
          </div>
        )}
      </div>
    ))}
  </div>
</div> 